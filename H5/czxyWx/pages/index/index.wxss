/**index.wxss**/
page, .container{
  width: 100%;
  background-color: #192B59;
  overflow-x: hidden;
}

.banner{
  width: 100%;
}

.banner>image, .teacher>image{
  width: 100%;
}

.guide{
	display: -webkit-flex;
	display: flex;
	font-size: 28rpx;
	margin: -48rpx 30rpx 0;
	position: relative;
	z-index: 2;
}
.lguide{
	flex: 1;
	color: #333;
	background-color: #fff;
	padding: 0 24rpx 0 30rpx;
	height: 102rpx;
	line-height: 102rpx;
	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.lguide>image{
	width: 72rpx;
	height: 72rpx;
	vertical-align: middle;
	margin-right: 24rpx;
}
.lguide>text{
	padding-left: 24rpx;
	border-left: 1px solid #e0e0e0;
}
.rguide{
	color: #fff;
	background-color: #f7a90c;
	padding: 0 44rpx;
	height: 102rpx;
	line-height: 102rpx;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
}

.teacher{
	padding: 20rpx 30rpx 72rpx;
	background: url(http://www.chazuomba.com/files/fileImg/czxyWx/index/bg_home_bottomcolor.png) no-repeat center top;
	background-size: 100% 100%;
}
.teacherTitle{
	background-color: rgba(255,255,255, .95);
	padding: 36rpx 30rpx 0;
	font-size: 28rpx;
	color: #333;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	font-weight: bold;
}
.teacherItem{
	background-color: rgba(255,255,255, .95);
	padding: 40rpx 30rpx;
	margin-bottom: 8rpx;
	display: -webkit-flex;
	display: flex;
}
.teacherItem:last-child{
	border-bottom-left-radius: 5px;
	border-bottom-right-radius: 5px;
}
.til>image{
	width: 200rpx;
	height: 260rpx;
	border-radius: 5px;
	vertical-align: middle;
}
.tir{
	flex: 1;
	margin-left: 40rpx;
	position: relative;
	overflow: hidden;
}
.tirname{
	font-size: 32rpx;
	color: #333;
	margin-top: 20rpx;
	font-weight: bold;
}
.tirjob{
	font-size: 24rpx;
	color: #333;
	margin-top: 10rpx;
}
.tirinfo{
	font-size: 24rpx;
	color: #999;
	margin-top: 10rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.tirname, .tirjob{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.tirlisten{
	font-size: 24rpx;
	color: #3573b3;
	height: 32rpx;
	line-height: 32rpx;
	position: absolute;
	right: 0;
	bottom: 0;
}
.tirlisten>image{
	width: 32rpx;
	margin-right: 20rpx;
	vertical-align: top;
}
