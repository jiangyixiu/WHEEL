/* payorder.wxss */
.wrap{background: #f6f6f6;min-height: 100%;width: 100%;font-family: '微软雅黑','Microsoft YaHei';overflow: hidden;}
.pay_time{width: 100%;height: 128rpx;background: #f6f6f6;font-size: 26rpx;color: #888888;text-align: center;}
.time_icon{width: 31rpx;height: 31rpx;background: url(http://weixin.zx-tour.com/static/xcx_img/pay_lock.png) no-repeat;background-size: 100%;margin-top: 19rpx;margin-left: 60rpx;margin-right: 18rpx;}
.time_text{margin-top: 21rpx;line-height: 26rpx;}
.time_countdown{width: 266rpx;margin: 18rpx auto 0;color: #fffefe;}
.time_countdown_bg{width: 38rpx;height: 45rpx;background: #4c4c4c;border-radius: 2rpx;line-height: 45rpx;text-align: center;font-size: 30rpx;}
.time_countdown view:nth-child(2),.time_countdown view:nth-child(5),.time_countdown view:nth-child(7){margin: 0 4rpx 0 2rpx;}
.time_countdown view:nth-child(4),.time_countdown view:nth-child(7){margin-left: 4rpx;}
/*/////订单信息/////////////////*/
.order_info{background: #ffffff;box-sizing: border-box;overflow: hidden;}
.order_title{height: 88rpx;line-height: 88rpx;background: #ffffff;box-sizing: border-box;margin-left: 30rpx;border-bottom: 2rpx solid #e8e8e8;font-size: 32rpx;}
.order_title view:nth-child(1){flex: 1;}
.order_title view:nth-child(2){color: #0398ff;padding-right: 30rpx;font-size: 28rpx;}
.info_conmon{font-size: 28rpx;line-height: 28rpx;margin-top: 22rpx;}
.info_conmon view:nth-child(1){color: #888888;}
.info_conmon view:nth-child(2){color: #333333;margin-left: 22rpx;}
.order_price{font-size: 28rpx;color: #888888;text-align: right;padding-right: 30rpx;height: 84rpx;line-height: 84rpx;}
/*/////////////////优惠券*/
.youhui{margin-top: 20rpx;background: #ffffff;border-top: 2rpx solid #d9d9d9;border-bottom: 2rpx solid #d9d9d9;font-size: 28rpx;color: #282828;box-sizing: border-box;overflow: hidden;}
.youhui_conmon{height: 87rpx;line-height: 87rpx;border-bottom: 2rpx solid #e8e8e8;margin-left: 19rpx;}
.has_youhui{font-size: 20rpx;color:#ff7400;height: 28rpx;line-height: 28rpx;border: 2rpx solid #ff7400;border-radius: 14rpx;padding: 0 11rpx;margin-top: 27rpx;margin-left: 13rpx;}
.youhui_icon{width: 10rpx;height: 19rpx;background: url(http://weixin.zx-tour.com/static/xcx_img/enroll_icon.png) no-repeat;background-size: 100%;margin: 36rpx 23rpx 0;}
/*/////////////////支付方式*/
.pay_way{margin-top: 20rpx;background: #ffffff;}
.pay_way_conmon{height: 87rpx;line-height: 87rpx;border-bottom: 2rpx solid #e8e8e8;margin-left: 19rpx;}
.wx_icon{height: 93rpx;width: 93rpx;margin-left: 5rpx;margin-right: 32rpx;background: url(http://weixin.zx-tour.com/static/xcx_img/pay_wx.png) no-repeat;background-size: 100%;}
.pay_wx_text view:nth-child(1){font-size: 30rpx;line-height: 30rpx;margin-top: 14rpx;}
.pay_wx_text view:nth-child(2){font-size: 24rpx;color: #888888;line-height: 24rpx;margin-top: 14rpx;}
.zhifu_tishi{margin-left: 24rpx;padding-bottom: 40rpx;}
.zhifu_tishi>view:nth-child(1){margin-top: 23rpx;font-size: 28rpx;color: #888888;}
.zhifu_tishi>view:nth-child(2) navigator:first-child{margin-top: 32rpx;font-size: 28rpx;color: #0398ff;flex: 1;}
.now_pay{box-sizing: border-box;overflow: hidden;padding: 30rpx 24rpx;}
.now_pay view{height: 88rpx;color: #ffffff;line-height: 88rpx;text-align: center;background: #0398ff;border-radius: 4rpx;font-size: 28rpx}
switch {margin-right: 10rpx;}