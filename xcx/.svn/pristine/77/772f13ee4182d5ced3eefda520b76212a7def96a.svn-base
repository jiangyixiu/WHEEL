<!--enroll.wxml-->
<view class="wrap" hidden="{{!bz_show}}">
<!--///////////////////出发城市选择//////////////////////-->
    <picker bindchange="city_change" class=""  mode="selector" range="{{city}}" value="{{index}}" style="overflow:hidden;">
    <view class="select flex-wrp" style="margin-top:18rpx;" hidden="{{city[0]=='不限'?true:false}}">
        <view style="color:#777777;">出发城市</view>
        <view>{{city[index]}}</view>
        <view class=""></view>
    </view>
    </picker>
    <!--//////套餐选择/////////////////-->
<view class="select_meal">
    <view class="classname">套餐选择</view>
</view>
    <picker class="" bindchange="taocan" mode="selector" range="{{s_meal}}" value="{{taocan_index}}" style="overflow:hidden;background:#ffffff;">
        <view class="select flex-wrp" style="border-top: none;margin-left:24rpx;border-bottom-color:#e8e8e8;">
            <view style="padding: 0;color:#777777;">选择套餐</view>
            <view>{{s_meal[taocan_index]}}</view>
            <view class=""></view>
        </view>
    </picker>
    <picker bindchange="course" class=""  mode="selector" range="{{course_name}}" value="{{course_index}}" style="overflow:hidden;">
        <view class="select flex-wrp" style="border-top: none;border-bottom-color:#e8e8e8;">
            <view style="color:#777777;">选择赛程</view>
            <view>{{course_name[course_index]}}</view>
            <view class=""></view>
        </view>
    </picker>
    <view class="meal_price">
        <view class="flex-wrp" style="float:right;">
            <view class="classname">根据您选择的套餐和组别，您的套餐费用</view>
            <view class="classname" style="font-size:24rpx;color:#0398ff;margin-top:0rpx;">￥</view>
            <view class="classname" style="font-size:30rpx;color:#0398ff;">{{c_price+m_price}}</view>
        </view>
    </view>
    <view class="select_meal" hidden="{{service==''?true:false}}">
        <view class="classname">其他服务选择</view>
    </view>
    <view class="select flex-wrp" style="border-top: none;border-bottom-color:#e8e8e8;" catchtap="attach" hidden="{{service==''?true:false}}">
        <view style="color:#777777;">其他配套服务</view>
        <view>{{num}}项</view>
        <view class=""></view>
    </view>
    <view class="meal_price" hidden="{{service==''?true:false}}">
        <view class="flex-wrp" style="float:right;">
            <view class="classname">您的其他服务费用为</view>
            <view class="classname" style="font-size:24rpx;color:#0398ff;margin-top:0rpx;">￥</view>
            <view class="classname" style="font-size:30rpx;color:#0398ff;">{{attach_price}}</view>
        </view>
    </view>
    <!--///////////////////备注///////////////-->
    <view class="select flex-wrp" style="margin-top:20rpx;" catchtap="bz">
        <view>备注</view>
        <view style="color:#777777;">{{bz_value!=''?'查看留言':'特殊需求请留言'}}</view>
        <view class=""></view>
    </view>
    <!--//////////////附加优质服务//////////////////-->
    <view class="service_mask" hidden="{{attach}}">
        <view class="content_all">
            <view class="service_title">
                <view class="close" catchtap="close">
                    <view class=""></view>
                </view>
                <view class="classname">配套服务选择</view>
            </view>
            <view class="service_content">
                <checkbox-group bindchange="select_service">
                      <label class="flex-wrp service_box" wx:for="{{service_data}}" wx:for-item="s" wx:for-index="v">
                          <view class="service_name">{{s.g_name}}</view>
                          <view class="service_price">{{s.g_currprice}}元</view>
                          <view class="service_icon {{s.checked?'service_icon_select':''}}"></view>
                          <checkbox hidden="{{true}}" value="{{s.g_name}}" checked="{{s.checked}}" />
                      </label>
                </checkbox-group>
            </view>
            <view class="service_btn">
                <view class="" catchtap="sure">确定</view>
            </view>
        </view>
    </view>
    <!--///////////////////广告///////////////////////////-->
    <label wx:if="{{m_type!='国内'}}"  class="advert" catchtap="advert">
        <view class="advert_top flex-wrp">
            <view class="{{advert.checked?'advert_select':'advert_noselect'}}"></view>
            <text>确认参与恒天财富“0元跑马”计划</text>
        </view>
        <view class="advert_bottom flex-wrp">
            <view class="classname">（ 该活动不产生任何费用，</view>
            <navigator url="###">点击可查看活动详情</navigator>）
        </view>
        <checkbox hidden="{{true}}" value="{{advert.value}}" checked="{{advert.checked}}" />
    </label>
    <!--///////////////底部//////////-->
    <view class="footer flex-wrp">
        <view class="foot_all flex-wrp">
            <view class="classname">总计:</view>
            <view class="classname">￥</view>
            <view class="classname">{{c_price+m_price+attach_price}}</view>
        </view>
        <view class="foot_realy flex-wrp">
            <view class="classname">实付:</view>
            <view class="classname">￥</view>
            <view class="classname">{{c_price+m_price+attach_price}}</view>
        </view>
        <view>
            <view class="btn" catchtap="sub_meal">提交订单</view>
        </view>
    </view>
</view>
 <!--////////////////////备注弹出样式////-->
 <view class="bz_mask" hidden="{{bz_show}}" >
      <view class="bz_text">
          <textarea placeholder="   输入您的特殊要求" placeholder-class="bz_place" bindinput="bz_text" value="{{bz_value}}"  />
      </view>
      <view class="bz_btn">
          <view class="" catchtap="bz_sub" style="{{bz_color?'background:#1ebc20;':''}}">提交</view>
      </view>
      <view class="bz_fanhui" catchtap="fanhui">
          <view class="">返回</view>
      </view>
 </view>

