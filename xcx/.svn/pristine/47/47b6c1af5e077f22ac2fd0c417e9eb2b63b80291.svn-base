/* pages/zx-index/zx-index.wxss */
.wrap{width: 100%;height: 100%;box-sizing: border-box;padding: 0 8rpx;background: #f6f6f6;font-size: '微软雅黑'，'Microsoft YaHei';padding-bottom: 40rpx;}
.box{margin-top: 20rpx;}
.box_top{width: 100%;position: relative;}
.box_img{width: 100%;height: 350rpx;overflow: hidden;position: relative;}
.box_img image{width: 100%;height: 350rpx;}
.box_content{position: absolute;width: 100%;height: 350rpx;background: rgba(0, 0, 0, 0.35);top: 0;left: 0;}
.box_name{position: absolute;top: 50%;left: 0rpx;box-sizing: border-box;color: #ffffff;font-family: '微软雅黑'，'Microsoft YaHei';     font-size: 52rpx;font-weight: bold;transform: translateY(-50%);text-align: center;width: 100%;padding: 0 72rpx;}
.box_time{position: absolute;overflow: hidden;bottom: 12rpx;left: 28rpx;font-size: 24rpx;line-height: 24rpx;}
.box_time image{width: 28rpx;float: left;height: 24rpx;margin-right: 14rpx;}
.box_time view{float: left;color: #ffffff;}
.box_city{right: 0rpx;position: absolute;overflow: hidden;bottom: 12rpx;font-size: 24rpx;line-height: 24rpx;}
.box_city image{width: 16rpx;height: 24rpx;float: left;margin-right: 14rpx;}
.box_city view{font-size: 24rpx;color: #ffffff;line-height: 24rpx;float: left;}