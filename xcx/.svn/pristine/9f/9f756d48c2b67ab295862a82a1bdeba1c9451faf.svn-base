/* /pages/searchHot/searchHot.wxss */
/*//////////热刺搜索页///////////////////*/
.wrap{font-family: '微软雅黑','Microsoft YaHei';min-height: 100%;background: #ffffff;overflow: hidden;box-sizing: border-box;position: relative;}
.keyward_search{height: 100%;min-height: 100%;position: relative;}
.keyward_searchbar{height: 100rpx;justify-content: center;line-height: 100rpx;background: #f0f0f0;}
.keyward_close{height: 100%;width: 128rpx;text-align: center;color: #0398ff;font-size: 30rpx;}
.keyward_mask{position: absolute;left: 0;width: 100%;height: 100%;}
.keyward_mask view{height: 88rpx;line-height: 88rpx;border-bottom: 2rpx solid #e3e3e3;color: #444444;font-size: 28rpx;padding-left: 30rpx;}
/*.keyward_close view{width: 23rpx;height: 23rpx;background: url(http://weixin.zx-tour.com/static/xcx_img/keyward_close.png) no-repeat;background-size: 100%;margin-left: 18rpx;margin-top: 30rpx;}*/
.search_cicle{position: relative;flex: 1;height: 66rpx;background: #f6f6f6;margin-top: 14rpx;overflow: hidden;border: 2rpx solid #e6e6e6;margin-top: 15rpx;margin-left: 18rpx;}
/*.input_style_foucs{position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: 10;}
.input_style_foucs view:nth-child(1){width: 28rpx;height: 28rpx;background: url(http://192.168.1.143:run_qiehuan_2/static/xcx_img/keyward_search.png) no-repeat;background-size: 100%;margin-top: 16rpx;margin-left: 20rpx;}*/
.input_style_blue{position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: 10;}
.search_img{width: 29rpx;height: 29rpx;background: url(http://weixin.zx-tour.com/static/xcx_img/keyward_search.png) no-repeat;background-size: 100%;margin-top: 19rpx;margin-left: 12rpx;margin-right: 18rpx;}
.search_place{font-size: 26rpx;color: #999999;}
.input_style_blue view:nth-child(2){font-size: 28rpx;line-height: 60rpx;color: #a9a9a9;margin-left: 13rpx;}
.keyward_input{position: relative;z-index: 50;width: 100%;height: 100%;}
.clear_inputVal{width: 28rpx;height: 28rpx;background: url(http://weixin.zx-tour.com/static/xcx_img/clear_inputVal.png) no-repeat;background-size: 100%;margin-top: 21rpx;margin-left: 12rpx;margin-right: 18rpx; }
