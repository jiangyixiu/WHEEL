/*/////////////////热词搜索////////////////////*/
.history_title,.hots_title{margin-top: 50rpx;font-size: 30rpx;line-height: 30rpx;color: #333333;padding-left: 30rpx;height: 30rpx;}
.history_title>view:nth-child(1){flex: 1;}
.history_title>view:nth-child(2){width: 70rpx;height: 100%;}
.history_title>view:nth-child(2) view{width: 26rpx;height: 27rpx;background: url(http://weixin.zx-tour.com/static/xcx_img/delet.png) no-repeat;background-size: 100%;margin-left: 14rpx;}
.history_box,.hots_box{box-sizing: border-box;font-size: 28rpx;padding: 30rpx 12rpx 0rpx 30rpx; overflow: hidden;}
.hots_conmon{padding: 0 30rpx;height: 60rpx;line-height: 60rpx;background: #f5f5f5;border-radius: 4rpx;float: left;margin-right: 18rpx;margin-bottom: 18rpx;}
.hots_title{margin-top: 40rpx;}